<div class="ui sticky fixed bottom ">
  <div class="ui segment">

    <div class="ui items">
      <div class="item">

        <div class="content">
          {{#if participation}}
          <div class="collapsable-content" style="display:none;">
            <i class=" large angle down left floated icon link expanded"></i>

            <p class="ui small header">Puntos obtenidos con mis amigos</p>
            <div class="ui divider top-divider"></div>
            <div class="ui center aligned basic segment friends-info">
              <p><i class="users icon"></i><strong><span class="particNumber">{{participation.friendParticNumber}}</span></strong> participando <strong>x10</strong>                =<i class="yellow star  icon"></i><span class="particPoints">{{math participation.friendParticNumber "*" 10}}</span> puntos</p>
              <p><i class="unhide icon"></i><strong><span class="visualNumber">{{participation.friendVisualNumber}}</span></strong> visualizaciones <strong>x1</strong>                =<i class="yellow star  icon"></i><span class="visualPoints">{{math participation.friendVisualNumber "*" 1}}</span> puntos</p>
            </div>

            <div class="ui divider middle-divider"></div>
          </div>
          {{/if}}
          <div class="ui middle aligned grid ">
            <div class="nine wide column">
              <div class="participation-info ui center aligned basic segment">

                <div class="remaining-time">
                  <p class="time">
                    <i class="hourglass half icon"></i>
                    <strong>0h 0m 0s</strong>
                  </p>
                  <p class="time-label">Tiempo restante</p>
                </div>
{{#if participation}}
                <div class="ui divider info-divider"></div>
                <i class=" large angle up left floated icon link "></i>

                <div class="my-points">
                  <p class="points">
                    <i class="yellow star middle aligned icon"></i>
                    <strong><span class="userPoints">{{participation.points}}</span></strong>
                  </p>
                  <p class="points-label">Puntos acumulados</p>
                </div>
                {{/if}}
              </div>
            </div>


            <div class="seven wide column">
         {{#unless participation}}
              <button class="green large right floated  ui button participate">
          <i class="heart icon"></i>Participar
         </button> 
         
         {{/unless}} 
         
         {{#if participation}}
              <button class=" green large right floated  ui button share">
              <div><i class="small star icon"></i>Conseguir
              <br> m√°s puntos </div>
            </button>
                  <script>
                    fbq('track', 'CompleteRegistration');

                    OneSignal.push(["sendTags", {promoId: {{promotion.promoId}}, userId: {{user.userId}}]);
                  </script>
       {{/if}}
            </div>
          </div>

          <div class="extra">
            <div class="ui divider bottom-divider"></div>
{{#if participation}}
            <i class="info icon"></i> Los otros participantes tienen ~ <span class="avgPoints">{{calculateAvgPoints promotion.totalPoints promotion.participNumber}}</span>puntos.
      {{/if}}    

{{#unless participation}}
            <i class="info icon"></i> <span class="promoPartcNumber">{{promotion.participNumber}}</span>participantes en este momento.
      {{/unless}} 
          </div>


        </div>

      </div>
    </div>
  </div>
</div>